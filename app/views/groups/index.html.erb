<header>
  <%= link_to users_path, :class => 'arrow' do %>
    <i class="material-icons blue">arrow_back</i>
  <% end %>
  <h2>Catagories</h2>
</header>
<%if @groups.empty?%>
  <div class="page">
    <h1>Please add Categories</h1>
  </div>
<%else%>
  <div class="page">
    <%@groups.each do |group|%>
    <%= render partial: "groups/card", locals: { group: group } %>
    <%end%>
  </div>
<%end%>
<div class="pageBottom">
  <%= button_to "Add Categories", new_group_path, :class => 'greenButton', :method => :get %>
</div>