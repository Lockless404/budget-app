<header>
  <%= link_to user_groups_path(user_id: @user.id ), :class => 'arrow' do %>
    <i class="material-icons blue">arrow_back</i>
  <% end %>
  <h2>Transactions</h2>
</header>
<div class="page">
  <% total = 0 %>
  <%@purchases.each {|purchase| total += purchase.purchase.amount}%>
  <h1>R<%=total%></h1>
  <%@purchases.each do |purchase|%>
  <%= render partial: "purchases/link", locals: { purchase: purchase } %>
  <% end %>
</div>
<div class="pageBottom">
  <%= button_to "Add Purchase", new_user_group_purchase_path(user_id: @user.id, group_id: @group.id), :class => 'greenButton', :method => :get %>
</div>